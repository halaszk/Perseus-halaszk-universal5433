config DECON_LCD
	depends on EXYNOS_DECON
	bool "Select LCD panel driver"

config DECON_MDNIE_LITE
	depends on DECON_LCD && DECON_MIPI_DSI
	tristate "Support MDNIE LITE"
	default n

